{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "spotName": "spot-debekoe-arm-015",
    "container1name": "client",
    "container1image": "ubuntu:xenial",
    "container2name": "certbot",
    "container2image": "certbot/certbot"
  },
  "resources": [
    {
      "name": "[variables('spotName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-02-01-preview",
      "location": "westus",
      "properties": {
        "containers": [
          {
            "name": "[variables('container1name')]",
            "properties": {
              "image": "[variables('container1image')]",
              "command": [
                "/bin/sh", "-c", "/.spot/spot-host-linux-0.1.9"
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "ports": [
                {
                  "port": 80
                },
                {
                  "port": 443
                },
                {
                  "port": 5000
                },
                {
                  "port": 8080
                }
              ],
              "environmentVariables": [
                {
                  "name": "PORT",
                  "value": "80"
                },
                {
                  "name": "USE_SSL",
                  "value": "1"
                },
                {
                  "name": "INSTANCE_TOKEN",
                  "value": "XXXX"
                },
                {
                  "name": "C_DOMAIN",
                  "value": "[concat(variables('spotName'), '.westus.azurecontainer.io')]"
                },
                {
                  "name": "ASPNETCORE_URLS",
                  "value": "http://0.0.0.0:5000"
                }
              ],
              "volumeMounts": [
                {
                  "name": "spot-host-mount",
                  "mountPath": "/.spot",
                  "readOnly": true
                },
                {
                  "name": "user-files",
                  "mountPath": "/root/persistent",
                  "readOnly": false
                },
                {
                  "name": "certbot-dir",
                  "mountPath": "/.certbot"
                },
                {
                  "name": "letsencrypt-dir",
                  "mountPath": "/etc/letsencrypt"
                }
              ]
            }
          },
          {
            "name": "[variables('container2name')]",
            "properties": {
              "image": "[variables('container2image')]",
              "command": [
                "certbot", "certonly", "--webroot", "--agree-tos", "-n",
                "-m", "derek@derekbekoe.com", "-w", "/.certbot", "-d", "[concat(variables('spotName'), '.westus.azurecontainer.io')]"
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "volumeMounts": [
                {
                  "name": "certbot-dir",
                  "mountPath": "/.certbot"
                },
                {
                  "name": "letsencrypt-dir",
                  "mountPath": "/etc/letsencrypt"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Never",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('spotName')]",
          "ports": [
            {
              "protocol": "tcp",
              "port": "443"
            },
            {
              "protocol": "tcp",
              "port": "5000"
            },
            {
              "protocol": "tcp",
              "port": "80"
            },
            {
                "protocol": "tcp",
                "port": "8080"
            }
          ]
        },
        "volumes": [
          {
            "name": "spot-host-mount",
            "azureFile": {
              "shareName": "spot-host-1",
              "readOnly": true,
              "storageAccountName": "derekb",
              "storageAccountKey": "Lidr/bhz4E47bHivz4q+MZKRc4vx8ZNLmMJ9T+CiUjz0FMkdw9t5qzKUExuej3tPowNZ1QNKrUvivDmOYBY0Bw=="
            }
          },
          {
            "name": "user-files",
            "azureFile": {
              "shareName": "spot-instance-demo-2",
              "readOnly": false,
              "storageAccountName": "derekb",
              "storageAccountKey": "Lidr/bhz4E47bHivz4q+MZKRc4vx8ZNLmMJ9T+CiUjz0FMkdw9t5qzKUExuej3tPowNZ1QNKrUvivDmOYBY0Bw=="
            }
          },
          {
            "name": "certbot-dir",
            "emptyDir": {}
          },
          {
            "name": "letsencrypt-dir",
            "emptyDir": {}
          }
        ]
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', variables('spotName'))).ipAddress.ip]"
    }
  }
}